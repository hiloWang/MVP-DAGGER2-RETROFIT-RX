<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:id="@+id/search_edit_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,UselessParent">

        <LinearLayout
            android:id="@+id/search_plate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@drawable/searchview_textfield"
            android:orientation="horizontal"
            tools:ignore="NestedWeights,UselessParent">

            <view
                android:id="@+id/search_src_text"
                class="com.github.hilo.widget.SearchView$SearchAutoComplete"
                android:layout_width="0.0dip"
                android:layout_height="36.0dip"
                android:layout_gravity="bottom"
                android:layout_weight="1.0"
                android:background="@null"
                android:ellipsize="end"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete|textNoSuggestions"
                android:minWidth="160dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:singleLine="true"
                android:textCursorDrawable="@null"/>

            <ImageView
                android:id="@+id/search_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:focusable="true"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:src="@drawable/ic_clear"
                tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>